<div class="page-width" data-section-id="{{ section.id }}" data-section-type="quotes">
  {% if section.settings.title != blank %}
    <div class="section-header text-center">
      <h2>{{ section.settings.title | escape }}</h2>
    </div>
  {% endif %}

  {% if section.blocks.size > 0 %}
    <div class="quotes-wrapper" data-slider>

 
        <ul class="test" data-slider-indicators>
          {%- for block in section.blocks -%}
           {% case block.type %}
            {%- when 'product' -%}
        
            {%- endcase -%}
          {%- endfor -%}
        </ul>
   
    </div>
  {% endif %}

  {% if section.blocks.size == 0 %}
     
  {% endif %}
</div>



{% schema %}
{
  "name": "Shop the look",
  "class": "index-section",
  "max_blocks": 6,
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Heading"
    }
  ],
  "blocks": [
    {
      "type": "product",
      "name": "Product",
      "settings": [
        {
          "type": "text",
          "id": "author",
          "label": "Author",
          "default": "Author's name"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Shop the look",
      "category": "product",
      "blocks": [
        {
          "type": "product"
        },
        {
          "type": "product"
        },
        {
          "type": "product"
        }
      ]
    }
  ]
}
{% endschema %}
